{
  "openapi": "3.0.4",
  "info": {
    "title": "Device Monitoring API",
    "description": "API for monitoring device activities",
    "version": "v1"
  },
  "paths": {
    "/api/DeviceActivity": {
      "post": {
        "tags": [
          "DeviceActivity"
        ],
        "summary": "POST реквест на добавление новой сессии",
        "requestBody": {
          "description": "Данные о сессии",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DeviceActivity"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/DeviceActivity"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/DeviceActivity"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/DeviceActivity/devices": {
      "get": {
        "tags": [
          "DeviceActivity"
        ],
        "summary": "Получение списка устройств",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceActivity"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceActivity"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceActivity"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/DeviceActivity/{deviceId}": {
      "get": {
        "tags": [
          "DeviceActivity"
        ],
        "summary": "Получение списка сессий по ID устройства",
        "parameters": [
          {
            "name": "deviceId",
            "in": "path",
            "description": "ID устройства",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceActivity"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceActivity"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/DeviceActivity"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/DeviceActivity/activity/{activityId}": {
      "delete": {
        "tags": [
          "DeviceActivity"
        ],
        "summary": "Удаляет выбранную сессию",
        "parameters": [
          {
            "name": "activityId",
            "in": "path",
            "description": "ID удаляемой сессии",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "DeviceActivity": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "ID устройства",
            "nullable": true
          },
          "name": {
            "type": "string",
            "description": "Имя пользователя",
            "nullable": true
          },
          "startTime": {
            "type": "string",
            "description": "Время включения",
            "format": "date-time"
          },
          "endTime": {
            "type": "string",
            "description": "Время выключения",
            "format": "date-time"
          },
          "version": {
            "type": "string",
            "description": "Версия установленного приложения",
            "nullable": true
          },
          "activityId": {
            "type": "string",
            "description": "Уникальное ID сессии",
            "format": "uuid"
          }
        },
        "additionalProperties": false,
        "description": "Хранит данные о сессии"
      }
    }
  }
}